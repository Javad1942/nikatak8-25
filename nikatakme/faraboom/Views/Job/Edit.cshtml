                                    <input type="text" asp-for="tavalood" class="input-text" placeholder="تاریخ تولد را بصورت  1378/01/01  وارد کنید" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="FatherName" class="input-text" placeholder="نام پدر: " required>
                                </div>
