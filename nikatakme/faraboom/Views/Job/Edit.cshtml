                                        <option value="دکتری">دکتری</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="Reshte" class="input-text" placeholder="  رشته تحصیلی: " required>
                                </div>
                                <input type="text" asp-for="Ostan" style="display: none;">
