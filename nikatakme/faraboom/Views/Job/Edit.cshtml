                                    <input type="text" asp-for="Address" class="input-text" placeholder="  آدرس: " required>
                                </div>
                                <div class="form-group">
                                    <input type="number" asp-for="Post" class="input-text" placeholder="  کدپستی: " required>
                                </div>
                                <div class="form-group">
                                    <input type="email" asp-for="Email" class="input-text" placeholder="ایمیل:" required>
                                </div>
                                <div class="form-group">
                                    <input type="number" value="@ViewBag.rand" class="input-text" disabled>
