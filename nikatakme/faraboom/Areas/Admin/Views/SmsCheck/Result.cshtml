<div class="card shadow" id="myDiv">
    <div class="card-header">
        <h2 class="mb-0"> نمایش  چک برگشتی </h2>
        <p>نام و نام خانوادگی :<span class="text-info"> @ViewBag.Name </span></p>
        <p> کد ملی :<span class="text-info"> @ViewBag.Nid1 </span></p>
    </div>
    <div class="card-body">
        <div class="card-body">
            
            <div class="row">
                <div class="table-responsive">
                    <div class="form-group justify-content-center text-center">
                        <table class="table table-hover">
                            <thead class="bg-primary ">
                                <tr>
                                    <th>ردیف</th>
                                    <th>شماره حساب مربوط به چک </th>
                                    <th>مبلغ چک برگشتی</th>
                                    <th>تاریخ برگشت چک</th>
                                    <th>کد بانک صادر کننده چک</th>
                                    <th> کد شعبه صادر کننده چک</th>
                                    <th>نام و شعبه بانک صادر کننده چک</th>
                                    <th>تاریخ وصول چک</th>
                                    <th>شناسه چک</th>
                                    <th>شماره چک </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white">
                                @{
                                    if (ViewBag.Result != null)
                                    {
                                        int i=1;
                                        foreach (var item in ViewBag.Result)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.AccountNumber</td>
                                                <td>@item.Amount</td>
                                                <td>@item.BackDate</td>
                                                <td>@item.BankCode</td>
                                                <td>@item.BranchCode</td>
                                                <td>@item.BranchDescription</td>
                                                <td>@item.Date</td>
                                                <td>@item.Id</td>
                                                <td>@item.Number</td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end ">
                <a onclick="print();" class="btn btn-success mt-1 mb-1" style="width: min-content;"> چاپ
                </a>
                <a href="/admin/Enteghal/Index" class="btn btn-success mt-1 mb-1" style="width: min-content;">
                    بازگشت
                </a>
            </div>
        </div>
    </div>
</div>



<script>
    function print() {
        var printContents = document.getElementById('myDiv').innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;

        window.print();

        document.body.innerHTML = originalContents;
    }
</script>