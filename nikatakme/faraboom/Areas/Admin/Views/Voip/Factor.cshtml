@{
    Layout = "_Layout4" ;
}
@if ( ViewBag.result != null )
{
    foreach (var item in ViewBag.result)
    {
        <div class="card shadow" id="myDiv">
        	<div class="card-header">
        		<h2 class="mb-0"> نمایش فاکتور خرید تلفن اینترنتی (Voip) </h2>
        		<div class="card-body">
        				<div class="row">
        					<div class="table-responsive">
        						<div class="form-group justify-content-center ">
        		   					<div class="text-center"> 
        								<p class="alert alert-success">
                                             ثبت و خرید با موفقیت انجام شد . 
                                        </p>
        		   					</div>
        	                        <table class="table table-hover">
        	                            <thead class="bg-primary ">
        	                        	    <tr>
        	                        	        <th> ردیف : </th>
        	                        	        <th> نام و نام خانوادگی : </th>
        	                        	        <th> عنوان : </th>
        	                        	        <th> نوع : </th>
        	                        	        <th> مبلغ : </th>
        	                        	        <th> تاریخ : </th>
        	                        	    </tr>
        	                        	</thead>
        	                        	<tbody class="bg-white">
                                            <tr>
        	                        	        <td>1</td>
        	                        	        <td>@item.NameFamily</td>       
        	                        	        <td>@item.Title_Tel</td>       
        	                        	        <td>@item.Type_Tel</td>       
        	                        	        <td>@item.Amount_Tel  تومان  </td>        
        	                        	        <td>@item.Date_Tel</td>       
        	                        	    </tr>
                                            <tr>
        	                        	        <td>2</td>
        	                        	        <td>@item.NameFamily</td>
        	                        	        <td>@item.Title_Set</td>  
        	                        	        <td>@item.Type_Set</td>  
        	                        	        <td>@item.Amount_Set  تومان  </td>
        	                        	        <td>@item.Date_Set</td>  
        	                        	    </tr>
                                            <tr>
        	                        	        <td colspan="2">
                                                    <span class="text-lg">
                                                          قیمت کل :  
                                                    </span>
                                                    <span class="text-lg ml-2">  
                                                        @item.Amount_Total
                                                    </span>
                                                          تومان  
                                                </td>
        	                        	    </tr>
        	                        	</tbody>
        	                        </table>
        	                    </div>
        	                </div>
        	            </div>
        	        <div class="d-flex justify-content-end ">
        	            <a onclick="print();" class="btn btn-success  mt-1 mb-1" style="width: min-content;">
                            چاپ
        	            </a>
        	            <a href="~/Admin/Voip/Index" class="btn btn-success mt-1 mb-1" style="width: min-content;">
        	                بازگشت
        	            </a>
        	        </div>
                </div>
            </div>
        </div>
          
    }
}
<script>
    function print()
    {
        var printContents = document.getElementById('myDiv').innerHTML;
        var originalContents = document.body.innerHTML;
        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
    }
</script>
