@{
    Layout = "_Layout4" ;
}
@model ViewModels.AdminViewModel.Voip.Vm_VoipUser
<div class="card shadow">
	<div class="card-header">
		<h2 class="mb-0"> فرم ثبت نام تلفن های اینترتنتی (Voip) </h2>
		<p class="d-none">@ViewBag.resultok</p>
        <p class="d-none">@ViewBag.result</p>
        <p class="d-none">@ViewBag.Msg</p>
        @if ( ViewBag.resultok != null )
        {
			<Form method="POST" action="/Admin/Voip/AddClient" enctype="multipart/form-data" autocomplete="off">
				<input type="text" class="d-none" asp-for="CM_Code" value="@ViewBag.CM_Code">
				<input type="text" class="d-none" asp-for="Mobile" value="@ViewBag.Mobile">
				<input type="text" class="d-none" asp-for="Post" value="@ViewBag.Post">
				<input type="text" class="d-none" asp-for="Address" value="@ViewBag.Address">
				<div class="card-body">
					<div class="row">
						<div class="table-responsive">
							<div class="form-group justify-content-center ">
								<div>
									<p class="text-center alert alert-dark">
										<span class="text-info">
											آدرس شما : 
										</span>	
										   @ViewBag.resultok 
									</p>
								</div>
        		    			<div class="container row">
								    <div class="form-group col-4">
								    </div>
        		                </div>
							</div>
						</div>
					</div>	
				</div>
         		<div class="row justify-content-center">
					<button class="btn btn-success btn-lg mt-1 mb-1" style="width: min-content;">
						مرحله نهایی
					</button>
					<a href="/Admin/Voip/Index" class="btn btn-success btn-lg mt-1 mb-1" style="width: min-content;">
						بازگشت
					</a>
        		</div>
			</Form>
		}
        @if ( ViewBag.Msg != null )
        {
			<div class="card-body">
				<div class="row">
					<div class="table-responsive">
						<div class="form-group justify-content-center ">
							<div>
								<p class="text-center alert alert-dark">
									   @ViewBag.Msg  
								</p>
							</div>
        	    			<div class="container row">
							    <div class="form-group col-4">
							    </div>
        	                </div>
						</div>
					</div>
				</div>	
			</div>
         	<div class="row justify-content-center">
				<a href="/Admin/Voip/Index" class="btn btn-success btn-lg mt-1 mb-1" style="width: min-content;">
					بازگشت
				</a>
        	</div>
		}
	</div>
</div>

