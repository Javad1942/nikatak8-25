@model ViewModels.AdminViewModel.Tavanam.Vm_Tavanam;

<br>
<div class="page-content-wrapper">
  <div class="container">
    <div class="checkout-wrapper-area py-3">
      <div class="credit-card-info-wrapper"><img class="d-block mb-4" src="~/mobile2/img/bg-img/credit-card.png" alt="">
      	<div class="text-center">
			<p class="alert alert-danger text-center">
				لازمه دریافت فاکتور ، کسر مبلغ 12000 تومان از کیف پول شما  میباشد .
			</p>
		</div>
        <div class="pay-credit-card-form">

            <form autocomplete="off" action="/mobile/Tavanam/ShowFactor" method="POST">
            <div class="mb-3">
              <label class="mb-2" for="national_code">کدملی را وارد کنید : </label>
              <input class="form-control" type="number" placeholder="کدملی : " required asp-for="national_code">
            </div>
            <div class="mb-3">
              <label class="mb-2" for="mobile">شماره تلفن همراه را وارد کنید : </label>
              <input class="form-control" type="number" placeholder="شماره تلفن همراه : " required asp-for="mobile">
            </div>
            <button class="btn btn-warning btn-lg w-100" type="submit">استعلام</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>