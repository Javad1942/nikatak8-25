@model Admin.Models.vm_Sms;

<br>
<div class="page-content-wrapper">
  <div class="container">
    <div class="checkout-wrapper-area py-3">
      <div class="credit-card-info-wrapper"><img class="d-block mb-4" src="~/mobile2/img/bg-img/credit-card.png" alt="">
        <div class="pay-credit-card-form">
            @if ( ViewBag.Msg != null)
            { 
               <p class="alert alert-danger text-center mt-4">@ViewBag.Msg</p> 
            }
            else
            {
                <form action="/mobile/SmsHoviyat/CodeTwo" method="POST" autocomplete="off">
                    <div class="mb-3">
                      <label class="mb-2" for="CodeOne">کد اس ام اس شده را وارد نمایید : </label>
                      <input class="form-control" type="number" placeholder="کد : " required asp-for="CodeOne">
                    </div>
                    <button class="btn btn-warning btn-lg w-100" type="submit">استعلام</button>
                </form>
            }
        </div>
      </div>
    </div>
  </div>
</div>