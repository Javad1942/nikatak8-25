<style>
    th
    {
        font-weight: normal;
        font-size: 13px;
    }
</style>

<br>
<br>
<br>
<div class="page-content-wrapper">
  <div class="container">
    <!-- Checkout Wrapper-->
    <div class="checkout-wrapper-area py-3">
      <!-- Billing Address-->
      <div class="billing-information-card mb-3">
        <div class="card billing-information-title-card bg-primary">
          <div class="card-body">
            <h6 class="text-center mb-0 text-white"> نمایش  چک برگشتی </h6>
          </div>
        </div>
        <div class="card user-data-card">
          <div class="card-body">
			@if (ViewBag.msg != null)
			{
				<br>
				<div class="text-center">
					<h5 class="alert alert-danger">@ViewBag.msg</h5>
				</div>
				<br>
				<br>
			}      
			else
			{      
            	<div class="single-profile-data d-flex align-items-center justify-content-between">
            	  <div class="title d-flex align-items-center"><span>نام و نام خانوادگی : </span></div>
            	  <div class="data-content">@ViewBag.Name </div>
            	</div>                      
            	<div class="single-profile-data d-flex align-items-center justify-content-between">
            	  <div class="title d-flex align-items-center"><span>کدملی : </span></div>
            	  <div class="data-content">@ViewBag.Nid1</div>
            	</div>
                <div class="row">
                    <div class="table-responsive">
                        <div class="form-group justify-content-center text-center">
                            <table class="table table-hover table-responsive mt-3">
                                <thead class="bg-info">
                                    <tr>
                                        <th class="text-light">ردیف</th>
                                        <th class="text-light">شماره حساب مربوط به چک </th>
                                        <th class="text-light">مبلغ چک برگشتی</th>
                                        <th class="text-light">تاریخ برگشت چک</th>
                                        <th class="text-light">کد بانک صادر کننده چک</th>
                                        <th class="text-light"> کد شعبه صادر کننده چک</th>
                                        <th class="text-light">نام و شعبه بانک صادر کننده چک</th>
                                        <th class="text-light">تاریخ وصول چک</th>
                                        <th class="text-light">شناسه چک</th>
                                        <th class="text-light">شماره چک </th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white">
                                    @{
                                        if (ViewBag.Result != null)
                                        {
                                            int i=1;
                                            foreach (var item in ViewBag.Result)
                                            {
                                                <tr>
                                                    <td class="text-primary">@i</td>
                                                    <td class="text-primary">@item.AccountNumber</td>
                                                    <td class="text-primary" id="@i">@item.Amount</td>
                                                        <script>
			                                                document.getElementById("@i").innerText = document.getElementById("@i").innerText.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
			                                            </script>
                                                    <td class="text-primary">@item.BackDate</td>
                                                    <td class="text-primary">@item.BankCode</td>
                                                    <td class="text-primary">@item.BranchCode</td>
                                                    <td class="text-primary">@item.BranchDescription</td>
                                                    <td class="text-primary">@item.Date</td>
                                                    <td class="text-primary">@item.Id</td>
                                                    <td class="text-primary">@item.Number</td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
			} 
          </div>
        </div>
      </div>
	</div>
  </div>
</div>