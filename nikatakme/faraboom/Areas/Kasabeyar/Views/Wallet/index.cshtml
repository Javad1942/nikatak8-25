@model ViewModels.AdminViewModel.Admin.Vm_info
<div class="card shadow">
	<div class="card-header">

		<h2 class="mb-0 text-center alert alert-warning">لطفا برای استفاده از خدمات کیف پول خود را شارژ کنید</h2>
		<hr>
		<div class="card-body">
			<div class="row">
				<div class="table-responsive">
					<div class="form-group justify-content-center ">
						<div class="row ">
							<div class="col-6">
								<input type="number" id="pay25" class="form-control "
									placeholder="لطفا مبلغ شارژ را وارد کنید" required>
							</div>
							<div class="col-2">
								<button onclick="sendpay();" class="btn btn-success  mt-1 mb-1"
									style="width: min-content;"> پرداخت با زرین پال
								</button>
							</div>
							@* <div class="col-2" style="text-align: right;">
								<button onclick="sendpay2();" class="btn btn-success  mt-1 mb-1"
									style="width: min-content;"> پرداخت با درگاه بانک ملت
								</button>
							</div> *@
						</div>
					</div>
				</div>
			</div>
		</div>
		<section id="data-list-view" class="data-list-view-header">
			<div class="table-responsive">
				<table class="table data-list-view">
					<thead class="bg-primary">
						<tr>
							<th> ردیف: </th>
							<th> مبلغ پرداخت: </th>
							<th> تاریخ :</th>
							<th> وضعیت :</th>
							
						</tr>
					</thead>
					<tbody class="bg-white">
						@if (ViewBag.list2 != null)
						{
							int i = 1;
							@foreach (var item in ViewBag.list2)
							{
								<tr>
									<td>@i</td>
									<td>@item.Pay</td>
									<td>@item.DateTime</td>
									@if (@item.RequestId == 0)
									{
										<td>واریز مستقیم</td>
									}
								</tr>
								i++;
							}
						}
					</tbody>
				</table>
			</div>
		</section>
	</div>
</div>

<script>
	document.getElementById("pay").innerText = document.getElementById("pay").innerText.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
</script>
<script>
	function sendpay()
	{

		var a = parseInt(document.getElementById('pay25').value);
		if (a < 100000)
		{
			alert("مبلغ شارژ کیف پول نمی تواند کمتر از 100 هزار تومان باشد");
		}

		else if (document.getElementById('pay25').value != "")
		{
			window.location.href = "/Kasabeyar/Pay/index/" + document.getElementById('pay25').value;
		}

	}

